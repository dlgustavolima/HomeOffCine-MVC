@model PagedViewModel<HomeOffCine.App.ViewModels.MovieViewModel>

@{
    ViewData["Title"] = "Movies Page";
}

<table class="table table-hover">
    <thead class="thead-dark">
        <tr class="col-md-12">
            <th class="col-md-3">

            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.List[0].Name)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.List[0].Gender)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.List[0].ReleaseDate)
            </th>
            <th class="col-md-3">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            <tr>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <td class="col-md-3">
                        <figure class="figure">
                            <img src="~/images/@item.Image" alt="@item.Image" class="figure-img rounded" style="width: 120px; height: 195px" />
                        </figure>
                    </td>
                }
                else
                {
                    <td>
                    </td>
                }
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td class="col-md-3" style="text-align:end;">
                    <a class="btn btn-warning" asp-controller="Movie" asp-action="Detail" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                    <a class="btn btn-info" asp-controller="Movie" asp-action="EditMovie" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                    <a class="btn btn-danger" asp-controller="Movie" asp-action="DeleteMovie" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
                </td>
            </tr>
        }
    </tbody>
</table>