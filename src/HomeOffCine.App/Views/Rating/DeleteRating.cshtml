@model HomeOffCine.App.ViewModels.RatingViewModel

@{
    ViewData["Title"] = "Remover avalição";
}

<h3>Você tem certeza que quer apagar isso?</h3>
<div>
    <h4>Remover avalição</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assessments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assessments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RatingDate)
        </dd>
    </dl>

    <form asp-action="ConfirmDeleteRating">
        <input type="hidden" asp-for="Id" />
        <input type="submit" class="btn btn-danger" value="Apagar" asp-route-movieId="@Model.MovieId" />
        <a class="btn btn-secondary" asp-controller="Movie" asp-action="WatchMovie" asp-route-id="@Model.MovieId">Voltar</a>
    </form>
</div>
